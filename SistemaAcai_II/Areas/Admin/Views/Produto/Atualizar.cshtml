@model SistemaAcai_II.Models.ProdutoSimples

@{
    ViewData["Title"] = "Editar Produto";
}

<h2>Editar Produto</h2>

<form asp-action="Atualizar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Descrição</label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Preço Unitário</label>
        <input asp-for="PrecoUn" class="form-control" type="text" />
        <span asp-validation-for="PrecoUn" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Atualizar</button>
    <a href="/Admin/Produto" class="btn btn-secondary mt-3">Cancelar</a>
</form>
