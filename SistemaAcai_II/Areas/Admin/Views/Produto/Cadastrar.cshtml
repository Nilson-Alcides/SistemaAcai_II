@model SistemaAcai_II.Models.ProdutoSimples

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h2>Cadastrar Produto</h2>

<form asp-action="Cadastrar" method="post">
    <div class="form-group">
        <label>Descrição</label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Preço Unitário</label>
        <input asp-for="PrecoUn" class="form-control" type="text" />
        <span asp-validation-for="PrecoUn" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a href="/Admin/Produto" class="btn btn-secondary mt-3">Cancelar</a>
</form>
