@model SistemaAcai_II.Models.Colaborador

 @{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="card mx-auto mt-5 shadow p-4" style="max-width: 400px;">
    <h3 class="text-center text-purple">Login</h3>

    @if (ViewData["MSG_E"] != null)
    {
        <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
    }
     
    <form method="post">
        <div class="mb-3">
            <label class="form-label text-dark-purple">Email:</label>
            <input type="email" name="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label text-dark-purple">Senha:</label>
            <input type="password" name="senha" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-purple w-100">Entrar</button>
    </form>

    <p class="text-center mt-3">
        <a href="@Url.Action("Cadastro", "Usuario")" class="text-purple">Criar conta</a>
    </p>
</div>
