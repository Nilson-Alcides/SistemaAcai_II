@model SistemaAcai_II.Models.Filiais

@{
    ViewData["Title"] = "Cadastro filiais";
}



<form asp-action="Cadastrar" asp-controller="Filiais" method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">

                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">

                                <h4 class="card-title mt-2">Cadastro de filiais</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_S"] != null)
                                {
                                    <p class="alert alert-success">@TempData["MSG_S"]</p>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="RazaoSocial">Razão Social</label>
                                        <input type="text" asp-for="RazaoSocial" class="form-control" placeholder="Informe um a Razão Social ">
                                        <span asp-validation-for="RazaoSocial" class="text-danger"></span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="NomeFantasia">Nome Fantasia</label>
                                        <input type="text" asp-for="NomeFantasia" class="form-control" placeholder="Informe um a Razão Social ">
                                        <span asp-validation-for="NomeFantasia" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Email">E-mail</label>
                                    @if (ViewData["MSG_Email"] != null)
                                    {
                                        <p class="alert alert-danger">@Html.Raw(ViewData["MSG_Email"])</p>
                                    }
                                    <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu e-mail">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="CNPJ">CNPJ</label>
                                    @if (ViewData["MSG_CPF"] != null)
                                    {
                                        <p class="alert alert-danger">@Html.Raw(ViewData["MSG_CNPJ"])</p>
                                    }
                                    <input type="text" asp-for="CNPJ" class="form-control cnpj" placeholder="000.000.000-00">

                                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Telefone">Telefone</label>
                                        <input type="text" asp-for="Telefone" class="form-control Telefone" placeholder="(00) 0000-0000">
                                        <span asp-validation-for="Telefone" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label asp-for="CEP">CEP</label>
                                    <input type="text" asp-for="CEP" class="no-cep cep form-control" placeholder="________-___">
                                    <span asp-validation-for="CEP"></span>
                                    <div class="alert alert-danger" style="display:none;"></div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Estado">Estado</label>
                                    <input type="text" asp-for="Estado" readonly="readonly" class="form-control" placeholder="">
                                    <span asp-validation-for="Estado"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Cidade">Cidade</label>
                                    <input type="text" asp-for="Cidade" readonly="readonly" class="form-control" placeholder="">
                                    <span asp-validation-for="Cidade"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Bairro">Bairro</label>
                                    <input type="text" asp-for="Bairro" readonly="readonly" class="form-control" placeholder="">
                                    <span asp-validation-for="Bairro"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Logradouro">Endereço</label>
                                    <input type="text" asp-for="Logradouro" class="form-control" placeholder="">
                                    <span asp-validation-for="Logradouro"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Complemento">Complemento</label>
                                    <input type="text" asp-for="Complemento" class="form-control" placeholder="">
                                    <span asp-validation-for="Complemento"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Numero">Número</label>
                                    <input type="number" asp-for="Numero" class="form-control" placeholder="">
                                    <span asp-validation-for="Numero"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div>

                            </article>
                            <div class="border-top card-body text-center">Já tem um conta? <a asp-action="Login" asp-controller="Home">Entre</a></div>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>
