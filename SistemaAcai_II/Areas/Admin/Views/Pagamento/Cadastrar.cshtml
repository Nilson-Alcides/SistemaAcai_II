@model SistemaAcai_II.Models.FormasPagamento

@{
    ViewData["Title"] = "Cadastro pagamento";
}



<form asp-action="Cadastrar" asp-controller="Pagamento" method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">

                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <h4 class="card-title mt-2">Cadastro de formas de pagamentos</h4>
                            </header>
                            <article class="card-body">                             
                                <div class="form-row">
                                    <div class="col form-group">                                      
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="Informe uma forma de pagamento ">
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>                                       
                                        <a asp-action="Index" class="btn btn-secondary btn-block"> Voltar </a>
                                    </div>
                            </article>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>
